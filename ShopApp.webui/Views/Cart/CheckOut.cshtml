@model OrderModel
<h4>Checkout</h4>
<hr>
<div class="row">
    <div class="col-md-8">
        <h6 class="mb-3">
            Order Detail
        </h6>
        <form asp-controller="Cart" asp-action="checkout" method="POST">
            <input type="hidden" value="0" name="CartId">
            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.FirstName">Name</label>
                    <input type="text" asp-for="@Model.FirstName" class="form-control">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.LastName">Surname</label>
                    <input type="text" asp-for="@Model.LastName" class="form-control">
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address">Address</label>
                <textarea asp-for="@Model.Address" class="form-control"></textarea>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.City">City</label>
                    <input type="text" asp-for="@Model.City" class="form-control">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Phone">Phone</label>
                    <input type="text" asp-for="@Model.Phone" class="form-control">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Email">Email</label>
                    <input type="text" asp-for="@Model.Email" class="form-control">
                </div>
            </div>
            <hr>
            <h6>Payment</h6>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.CartName">Cart Name</label>
                    <input type="text" asp-for="@Model.CartName" class="form-control">
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.CartNumber">Cart Number</label>
                    <input type="text" asp-for="@Model.CartNumber" class="form-control">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.ExpirationMonth">Expiration Manth</label>
                    <input type="text" asp-for="@Model.ExpirationMonth" class="form-control">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.ExpirationYear">Expireation Year</label>
                    <input type="text" asp-for="@Model.ExpirationYear" class="form-control">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Cvc">Cvc</label>
                    <input type="text" asp-for="@Model.Cvc" class="form-control">
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
    </div>
    <div class="col-md-4">
        <h6 class="mb-3"></h6>
        <span>Summary Info</span>
        <ul class="list-group mb-3">
            @foreach (var item in Model.CartModel.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <p>@item.Name</p>
                        <small class="text-muted">@item.Price</small>
                    </div>
                </li>
            }


            <li class="list-group-item d-flex justify-content-between">
                <div>
                    <p>Total</p>
                    <span class="text-muted">@Model.CartModel.TotalPrice().ToString()</span>
                </div>
            </li>
        </ul>
        </h6>
    </div>
</div>
