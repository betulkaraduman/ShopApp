@model ProductDetailModel

<div class="card mb-3 py-2">
    <div class="row no-gutters">
        <div class="col-md-2">
            <img src="~/img/@Model.Product.ImageUrl" class="card-img" alt="" style="width: 100%;">
        </div>
        <div class="col-md-10">
            <div class="card-body">
                <h4 class="card-title">@Model.Product.Name</h4>
                 @foreach (var item in @Model.Categories)
                 { <a asp-controller="shop" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-0">@item.Name |</a>
                     
                 }
               
                <div class="mb-3">
                    <h5 class="text-primary mb-3">
                      <i class="fas fa-lira-sign"></i>  @Model.Product.Price
                    </h5>
                </div>
                 <form asp-controller="Cart" asp-action="AddToCart" method="POST"  style="display: inline;">
                    <input type="hidden" name="ProductId" value="@Model.Product.Id">
                    <div class="input-group mb-3">
                        <input type="number" name="quantity" value="1" class="form-control" min="1" step="1" style="width: 100px;"> 
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary">
                            <i class="fas fa-cart-plus">Add To Card</i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h6 class="card-text mx-5">@Html.Raw(Model.Product.Description)</h6>
        </div>
    </div>
</div>