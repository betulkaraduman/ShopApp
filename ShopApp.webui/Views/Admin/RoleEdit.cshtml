@model RoleDetails
<h4 class="h3">Edit Role</h4>

<hr>
<div class="row">
    <div class="col-md-12">
        <form asp-controller="admin" asp-action="RoleEdit">
            <input type="hidden" value="@Model.Role.Id" name="RoleId">
            <input type="hidden" value="@Model.Role.Name" name="RoleName">
            <h6 class="bg-info text-white p-1">Add To @Model.Role.Name</h6>
            <table class="table table-bordered table-sm">
                @if (Model.NonMembers.Count() == 0)
                {
                    <tr>
                        <td  class="p-2" colspan="2">All users have a role</td>
                    </tr>
                }
                else
                {
                    @foreach (var user in Model.NonMembers)
                    {
                        <tr >
                            <td class="p-2">@user.UserName</td>
                            <td class="p-2" style="width: 150px;">
                                <input type="checkbox" name="IdsToAdd" value="@user.Id">
                            </td>
                        </tr>
                    }
                }
            </table>
            <hr>
            <h6 class="bg-info text-white p-1">Remove From @Model.Role.Name</h6>
            <table class="table table-bordered table-sm">
                @if (Model.Members.Count() == 0)
                {
                    <tr >
                        <td class="p-2" colspan="2">Nobody users have a role</td>
                    </tr>
                }
                else
                {
                    @foreach (var user in Model.Members)
                    {
                        <tr>
                            <td class="p-2">@user.UserName</td>
                            <td style="width: 150px;">
                                <input type="checkbox" name="IdsToDelete" value="@user.Id">
                            </td>
                        </tr>
                    }
                }
            </table>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>
</div>